<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:alpha="0.8"
    app:cardCornerRadius="8dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/fondo1"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caravanaTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caravana: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caravanaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaNacimientoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fechaNacimientoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaAltaTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Alta: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fechaAltaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pesoNacimientoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso de Nacimiento: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pesoNacimientoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pesoActualTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso de Actual: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pesoActualTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/razaTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/razaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipoPartoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Parto: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tipoPartoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp">


        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@android:color/transparent"
            android:src="@drawable/editar" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@android:color/transparent"
            android:src="@drawable/borrar" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
